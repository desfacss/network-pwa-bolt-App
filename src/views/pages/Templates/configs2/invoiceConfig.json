                "alignment": "right"
            },
            {
                "label": "Date",
                "name": "date",
                "type": "datePicker",
                "alignment": "right"
            }
        ]
    },
    "partyDetails": {
        "fields": [
            {
                "label": "Customer Name",
                "name": "customerName",
                "type": "input",
                "alignment": "left"
            },
            {
                "label": "Customer Address",
                "name": "customerAddress",
                "type": "textArea",
                "alignment": "left"
            }
        ]
    },
    "itemsTable": {
        "columns": [
            {
                "title": "Service",
                "key": "name",
                "type": "input"
            },
            {
                "title": "Qty",
                "key": "quantity",
                "type": "number"
            },
            {
                "title": "Price",
                "key": "price",
                "type": "number"
            }
        ]
