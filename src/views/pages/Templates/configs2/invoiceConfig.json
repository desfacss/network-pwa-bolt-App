{
    "type": "invoice",
    "header": {
        "fields": [
            {
                "label": "Company Logo",
                "type": "image",
                "source": "/path/to/your/logo.png",
                "alignment": "left",
                "width": "100px"
            },
            {
                "label": "Company Name",
                "type": "text",
                "value": "Your Company Name",
                "alignment": "left"
            },
            {
