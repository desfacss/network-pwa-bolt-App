    "termsAndConditions": {
        "fields": [
            {
                "label": "Terms and Conditions",
                "name": "terms",
                "type": "textArea",
                "alignment": "left"
            },
            {
                "label": "Remarks",
                "name": "remarks",
                "type": "textArea",
                "alignment": "left"
            }
        ]
