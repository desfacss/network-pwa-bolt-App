        "fields": [
            {
                "label": "Subtotal",
                "key": "subtotal",
                "type": "display",
                "alignment": "right",
                "value": "0"
            },
            {
                "label": "Tax (10%)",
                "key": "tax",
                "type": "display",
                "alignment": "right",
                "value": "0"
            },
            {
                "label": "Total",
                "key": "total",
                "type": "display",
                "bold": true,
                "alignment": "right",
                "value": "0"
            }
        ]
