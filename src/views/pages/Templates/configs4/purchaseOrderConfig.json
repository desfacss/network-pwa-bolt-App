{
  "type": "purchase_order",
  "header": {
    "fields": [
      {
        "label": "Company Logo",
        "type": "image",
        "source": "/path/to/your/logo.png",
        "alignment": "left",
        "width": "100px"
      },
      {
        "label": "Company Name",
        "type": "text",
        "value": "M/S. FORESIGHT",
        "alignment": "left"
      },
      {
        "label": "Email",
        "type": "text",
        "value": "yourcompanyemail@example.com",
        "alignment": "left"
      }
    ]
  },
  "documentDetails": {
    "fields": [
      {
        "label": "PO No:",
        "name": "poNumber",
        "type": "input",
        "alignment": "right"
      },
      {
        "label": "PO Date:",
        "name": "poDate",
        "type": "datePicker",
        "alignment": "right"
      }
    ]
  },
  "partyDetails": {
    "fields": [
      {
        "label": "SUPPLIER'S NAME:",
        "name": "supplierName",
        "type": "input",
        "alignment": "left"
      },
      {
        "label": "ADDRESS:",
        "name": "supplierAddress",
        "type": "textArea",
        "alignment": "left",
        "value": "Delhi"
      }
    ]
  },
  "itemsTable": {
    "columns": [
      {
        "title": "S.No.",
        "key": "sNo",
        "type": "number"
      },
      {
        "title": "Description",
        "key": "description",
        "type": "textArea"
      },
      {
        "title": "Unit",
        "key": "unit",
        "type": "input"
      },
      {
        "title": "Qty",
        "key": "quantity",
        "type": "number"
      },
      {
        "title": "Rate",
        "key": "rate",
        "type": "number"
      },
      {
        "title": "Amount",
        "key": "amount",
        "type": "number",
        "readOnly": true
      }
    ],
    "data": []
  },
  "summaryCalculation": {
    "quantityField": "quantity",
    "priceField": "rate"
  },
  "summaryFieldsMapping": {
    "total": {
      "calculation": "subtotal"
    },
    "gst": {
      "calculation": "tax",
      "taxRate": 0.18
    },
    "roundedOff": {
      "calculation": "roundedOff"
    },
    "grandTotal": {
      "calculation": "total",
      "taxRate": 0.18
    }
  },
  "summary": {
    "fields": [
      {
        "label": "Contact person:",
        "name": "contactPerson",
        "type": "input",
        "alignment": "left"
      },
      {
        "label": "TOTAL",
        "key": "total",
        "type": "display",
        "alignment": "right",
        "value": "0"
      },
      {
        "label": "GST 18%",
        "key": "gst",
        "type": "display",
        "alignment": "right",
        "value": "0"
      },
      {
        "label": "Rounded off",
        "key": "roundedOff",
        "type": "display",
        "alignment": "right",
        "value": "0"
      },
      {
        "label": "GRAND TOTAL",
        "key": "grandTotal",
        "type": "display",
        "alignment": "right",
        "bold": true,
        "value": "0"
      }
    ]
  },
  "termsAndConditions": {
    "fields": [
      {
        "label": "PAYMENT TERMS:",
        "name": "paymentTerms",
        "type": "textArea",
        "alignment": "left"
      },
      {
        "label": "DELIVERY TERM:",
        "name": "deliveryTerm",
        "type": "textArea",
        "alignment": "left"
      },
      {
        "label": "REMARKS:",
        "name": "remarks",
        "type": "textArea",
        "alignment": "left"
      }
    ]
  },
  "footer": {
    "fields": [
      {
        "label": "Authorised Signatory",
        "type": "signature",
        "alignment": "center"
      }
    ]
  }
}